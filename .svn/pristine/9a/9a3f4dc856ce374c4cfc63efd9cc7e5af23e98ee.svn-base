<!DOCTYPE html>
<html>
<head>
	<title>CI | LogIn</title>
    <meta charset="UTF-8">
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
	<!-- Bootstrap 3.3.2 -->
    <link href="{{ url_for('static', filename='plugins/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css"/>
    <!-- Theme style -->
    <link href="{{ url_for('static', filename='stylesheets/AdminLTE.min.css') }}" rel="stylesheet" type="text/css"/>
</head>

<body class="hold-transition login-page">
	<div class="login-box">
		<!-- LOGIN LOGO Begin -->
		<div class="login-logo">
			<a href=""><b>C</b>I</a>
		</div>		
		<!-- LOGIN LOGO End -->

		<!-- LOGIN FORM Begin -->
		<div class="login-box-body" style="-webdit-box-shadow: 3px 3px 6px #666;-moz-box-shadow: 3px 3px 6px #666;box-shadow: 3px 3px 6px #666;">
		    {% for category, message in get_flashed_messages(with_categories=true) %}
				<div class="alert alert-error">
					{{ message }}
				</div>		
		    {% endfor %}
			<p class="login-box-msg">Sign in</p>
			<form method="POST"> <!--action="/auth/login" -->
				{{ form.hidden_tag() }}
	      		<div class="form-group has-feedback">
	      			{{ form.username(class="form-control",placeholder="Username") }}
			        <span class="glyphicon glyphicon-user form-control-feedback"></span>
	      		</div>
	      		<div class="form-group has-feedback">
	      			{{ form.password(class="form-control",placeholder="Password") }}
			        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
	      		</div>

		      	<div class="row">
			        <div class="col-xs-8">

			        </div>
			        <div class="col-xs-4">
			        	{{ form.submit(class="btn btn-primary btn-block btn-flat") }}
			        </div>
		      	</div>
			</form>
		</div>
		<!-- LOGIN FORM End -->
	</div>

<!-- jQuery 2.2.0 -->
<script src="{{ url_for('static', filename='plugins/jQuery/jQuery-2.2.0.min.js') }}"></script>
<!-- Bootstrap 3.3.6 -->
<script src="{{ url_for('static', filename='plugins/bootstrap/js/bootstrap.min.js') }}"></script>
<script>
</script>

</body>
</html>