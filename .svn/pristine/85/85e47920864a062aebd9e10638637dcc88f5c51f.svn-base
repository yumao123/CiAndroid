        except Exception, e:
            #todo...
            return '{0}:{1}'.format(type(e), e)
        finally:
            session.close()


    @classmethod
    def modify_switch(cls, file_nick_name, file_items):
        session = db_session()
        try:
            file_nick_name = to_unicode(file_nick_name)
            config = session.query(ConfigureSettingModule).filter_by(file_nick_name = file_nick_name)
