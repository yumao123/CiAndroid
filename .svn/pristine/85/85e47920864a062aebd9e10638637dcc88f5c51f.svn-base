    def to_json(cls, config):
        return {
            'android_or_ios':       config.android_or_ios,
            'file_nick_name':       config.file_nick_name,
            'file_type':            config.file_type,
            'value_type':           config.value_type,
            'file_relative_path':   config.file_relative_path,
